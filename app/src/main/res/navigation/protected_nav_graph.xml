<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.androidsocialapp.FeedFragment"
        android:label="Feed" />
    <fragment
        android:id="@+id/createFragment"
        android:name="com.example.androidsocialapp.CreateFragment"
        android:label="Create">
        <action
            android:id="@+id/action_createFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.androidsocialapp.ui.ProfileFragment"
        android:label="Profile" />
</navigation>
