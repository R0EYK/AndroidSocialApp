<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">



    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.androidsocialapp.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_protectedArea"
            app:destination="@id/protectedAreaFragment" />
    </fragment>
    <fragment
        android:id="@+id/protectedAreaFragment"
        android:name="com.example.androidsocialapp.ProtectedAreaFragment"
        android:label="Protected Area"
        tools:layout="@layout/fragment_protected_area" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.androidsocialapp.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.androidsocialapp.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>
